{
  "name": "venom_bot",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon server.js | pino-pretty",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "mkdirp dist && copyfiles -a \"server.js\" \"package.json\" \"public/**/*\" dist",
    "postbuild": "cd dist && npm install --production",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "venom-bot",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "description": "WhatsApp Bot with Venom API - A web application for sending WhatsApp messages",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "pino": "^9.6.0",
    "socket.io": "^4.7.2",
    "venom-bot": "^5.0.21"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "mkdirp": "^3.0.1",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.0.0",
    "rimraf": "^5.0.5"
  }
}
